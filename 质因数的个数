#include<stdio.h>
#include<math.h>
int ans=2;
int prime[100000];
bool isprime(long int x)
{
	bool success=false;
	if(x<=1) return false;
	if(x==2||x==3) return true;
	else
	{
		int i;
		for(i=2;i<=sqrt(x);i++)
		{
			if(x%i==0)
			{
				success=false;
				break;
			}
		}
		if(success==false) return false;
		else return true;
	}
}
void init()
{
	int i,j;
	prime[0]=2;
	prime[1]=3;
	bool isp=true;
	for(i=4;i<100000;i++)
	{
		for(j=2;j<=sqrt(i);j++)
		{
			if(i%j==0)
			{
				isp=false;
				break;
			}
		}
		if(isp==true)
		{
			prime[ans++]=i;
		}
		isp=true;
	}
}
void main()
{
	long int n;
	init();
	while(scanf("%ld",&n)!=EOF)
	{
		if(n<=1) break;
		int i;
		if(isprime(n)==true)
		{
			printf("1\n");
		}
		int count=0;
		for(i=0;i<ans;i++)
		{
			while(n%prime[i]==0)
			{
				n/=prime[i];
				count++;
			}
		}
		printf("%d\n",count);
	}
}
